<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    tools:context="css.cis3334.asmdgame.ThirdFragment">

    <!-- TODO: Update blank fragment layout -->


    <TextView
        android:id="@+id/textViewHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/hello_third_fragment"
        android:textAlignment="center"
        android:textSize="48sp" />


    <TextView
        android:id="@+id/textViewSpacer0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" "
        android:textAlignment="center"
        android:textSize="36sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewGoal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Goal Value:   "
                android:textSize="36sp" />
            <TextView
                android:id="@+id/textViewCurrent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Current Value:   "
                android:textSize="36sp" />

            <TextView
                android:id="@+id/textViewModifier"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Modifier:   "
                android:textSize="36sp" />

            <TextView
                android:id="@+id/textViewTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Time Left:   "
                android:textSize="36sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewGoalNum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-1"
                android:textSize="36sp" />

            <TextView
                android:id="@+id/textViewCurrentNum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-1"
                android:textSize="36sp" />

            <TextView
                android:id="@+id/textViewModifierNum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-1"
                android:textSize="36sp" />

            <TextView
                android:id="@+id/textViewTimeNum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-1"
                android:textSize="36sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewSpacer1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=" "
            android:textSize="24sp" />

        <Button
            android:id="@+id/buttonMultiply"
            android:layout_width="match_parent"
            android:layout_height="112dp"
            android:layout_weight="1"
            android:text="MULTIPLY"
            android:textSize="42sp" />

        <TextView
            android:id="@+id/textViewSpacer2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=" "
            android:textSize="24sp" />/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewScore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Score: "
            android:textSize="24sp"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/textViewScoreNum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="-1"
            android:textSize="48sp"
            android:textAlignment="center"/>/>

        <TextView
            android:id="@+id/textViewHighScore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Highest: "
            android:textSize="24sp"
            android:textAlignment="center"/>/>

        <TextView
            android:id="@+id/textViewHighScoreNum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="-1"
            android:textSize="48sp"
            android:textAlignment="center"/>/>

    </LinearLayout>


</LinearLayout>
